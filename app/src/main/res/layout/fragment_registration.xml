<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background">

    <LinearLayout
        android:id="@+id/font"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/login_and_register_for_frame"
        android:elevation="10dp"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingTop="50dp"
        android:paddingRight="20dp"
        android:paddingBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="@string/create_account"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textFontWeight="400"/>

        <EditText
            android:id="@+id/first_name_et"
            android:inputType="text"
            android:layout_width="273dp"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/gray_border"
            android:hint="@string/name_hint"
            android:paddingStart="8dp"
            android:textColorHint="@color/dark_gray"
            android:textColor="@color/dark_gray"
            android:fontFamily="@font/montserrat"
            android:textSize="15sp"
            android:textFontWeight="600"/>

        <EditText
            android:id="@+id/last_name_et"
            android:inputType="text"
            android:layout_width="273dp"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/gray_border"
            android:hint="@string/last_name_hint"
            android:paddingStart="8dp"
            android:textColorHint="@color/dark_gray"
            android:textColor="@color/dark_gray"
            android:fontFamily="@font/montserrat"
            android:textSize="15sp"
            android:textFontWeight="600"/>

        <EditText
            android:id="@+id/email_et"
            android:inputType="textEmailAddress"
            android:layout_width="273dp"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/gray_border"
            android:hint="@string/email_hint"
            android:paddingStart="8dp"
            android:textColorHint="@color/dark_gray"
            android:textColor="@color/dark_gray"
            android:fontFamily="@font/montserrat"
            android:textSize="15sp"
            android:textFontWeight="600"/>

        <EditText
            android:id="@+id/phone_num_et"
            android:inputType="phone"
            android:layout_width="273dp"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/gray_border"
            android:hint="@string/phone_number_hint"
            android:paddingStart="8dp"
            android:textColorHint="@color/dark_gray"
            android:textColor="@color/dark_gray"
            android:fontFamily="@font/montserrat"
            android:textSize="15sp"
            android:textFontWeight="600"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            >

            <EditText
                android:id="@+id/password_et"
                android:layout_width="273dp"
                android:layout_height="45dp"
                android:background="@drawable/gray_border"
                android:hint="@string/password_hint"
                android:inputType="textPassword"
                android:paddingStart="8dp"
                android:textColorHint="@color/dark_gray"
                android:textColor="@color/dark_gray"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:fontFamily="@font/montserrat"
                android:textSize="15sp"
                android:textFontWeight="600"/>

            <ImageView
                android:id="@+id/hide_show_password_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:src="@drawable/hide_password"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>


        <Button
            android:id="@+id/register_btn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="@string/register_button_text"
            android:backgroundTint="@color/dark_blue"
            android:textColor="@color/white_light"
            android:textSize="16sp"
            android:fontFamily="@font/montserrat"
            android:layout_weight="700"/>
    </LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/font"
    android:layout_marginTop="10dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/already_have_an_account"
        android:textSize="15sp"
        android:fontFamily="@font/montserrat"
        android:textColor="@color/white_light"
        android:layout_weight="400"/>
    <TextView
        android:id="@+id/sign_in_redirect_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign_in"
        android:layout_marginStart="5dp"
        android:textSize="15sp"
        android:fontFamily="@font/montserrat"
        android:textColor="@color/white_light"
        android:layout_weight="400"/>
</LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
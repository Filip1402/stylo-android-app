<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="130dp">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/cartItemRemoveButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/trash_can"
        android:scaleType="fitCenter"/>

    <ImageView
        android:id="@+id/cartItemPhoto"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="5dp"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toEndOf="@+id/cartItemRemoveButton"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/noimage" />

    <TextView
        android:id="@+id/cartItemDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/montserrat"
        android:text="NIKE Air Max 270, crne, 42"
        app:layout_constraintStart_toEndOf="@+id/cartItemPhoto"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toEndOf="@+id/cartItemPhoto"
        app:layout_constraintTop_toBottomOf="@+id/cartItemDetails">
        <ImageView
            android:id="@+id/cartMinusButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cartItemRemoveButton"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/minus"
            android:background="@color/gray_border"/>

        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/blue_corner_without_radius"
            android:text="1"
            android:fontFamily="@font/montserrat"
            android:textSize="20sp"
            android:gravity="center_vertical|center_horizontal"
            ></TextView>

        <ImageView
            android:id="@+id/cartPlusButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cartItemRemoveButton"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/plus"
            android:background="@color/dark_blue"/>

    </LinearLayout>

    <TextView
        android:id="@+id/cartItemTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/montserrat"
        android:text="Total"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/cartItemPhoto"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <TextView
        android:id="@+id/cartItemPricePerPiece"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:textSize="10dp"
        android:fontFamily="@font/montserrat"
        android:text="Price per piece"
        app:layout_constraintStart_toEndOf="@+id/cartItemPhoto"
        app:layout_constraintTop_toBottomOf="@+id/cartItemTotal" />


</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>